<% unless locals.empty? %>
  <%= message %>
<% end %>

<div class="row">
  <div class="col-sm-12">
    <h4><%= @user.username %>, edit your sightseeing list below:</h4>
    <form method="POST" action="/lists/<%= @user.slug %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
      <h5>Choose from existing Sights by checking (or unchecking) the box:</h5>
      <% @sights.each do |sight| %>
      <input type="checkbox" name="user[sight_ids][]" id="sight_<%= sight.id %>" value="<%= sight.id %>" <%='checked' if @user.sight_ids.include?(sight.id) %>><%= sight.name %><br>
      <% end %>
      <h5>- OR - create a new sight to visit:</h5><br>
      Name: <input type="text" name="sight[name]" id="new_sight_name"><br>
      Description:<br>
      <textarea name="sight[description]" rows="4" cols="50" id="new_sight_description">Enter brief description here...</textarea><br>
      <input type="submit" value="Submit Edited List">
      <br></br>
    </form>
  </div>
</div>