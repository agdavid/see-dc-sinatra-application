<div class="row">
  <div class="col-sm-12">
    <h4><%= current_user.username %>, edit your review below:</h4>

    <form method="POST" action="/reviews/<%= @review.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
      <h5>Confirm that the correct sight is checked:</h5><br>
      <% @sights.each do |sight| %>
        <input type="checkbox" name="sight[id]" id="sight_<%= sight.id %>" value="<%= sight.id %>"<%='checked' if @sight.id == sight.id %>><%= sight.name %><br>
      <% end %>
      <br></br>
      Review:<br>
      <textarea name="review[content]" rows="4" cols="50" id="review_content"><%= @review.content %></textarea>
      <br></br>
      <input type="submit" value="Submit Edited Review">
      <br></br>
    </form>
  </div>
</div>