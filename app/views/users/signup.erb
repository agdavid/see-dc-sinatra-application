<div class="row">
  <div class="col-sm-12">

    <h1>Sign Up</h1>

    <% unless locals.empty? %>
      <%= message %>
    <% end %>

    <form method="POST" action='/signup'>
      <label>Username:</label> 
      <br><input required type="text" id="username" name="username"><br><br>
      <label>Email:</label> 
      <br><input required type="email" id="email" name="email"><br><br>
      <label>Password:</label> 
      <br><input required type="password" id="password" name="password"><br><br>
      <input type="submit" id="submit">
    </form>

  </div> <!-- col-sm-12 -->
</div> <!-- row -->
